// Scribengine - Database Schema
// Using Prisma with PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// NEXTAUTH REQUIRED TABLES
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?

  // Admin flag - allows free usage of all services
  isAdmin       Boolean   @default(false)

  // Stripe integration
  stripeCustomerId     String?   @unique
  subscriptionTier     String    @default("free") // free, pro, enterprise
  subscriptionStatus   String?   // active, canceled, past_due, etc.
  subscriptionId       String?   // Stripe subscription ID
  currentPeriodEnd     DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  accounts        Account[]
  sessions        Session[]
  projects        Project[]
  payments        Payment[]
  companyProfiles CompanyProfile[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// APPLICATION TABLES
// ============================================

model CompanyProfile {
  id        String   @id @default(cuid())
  userId    String

  // Identity
  name            String   // Display name, e.g. "My SaaS Startup"
  isDefault       Boolean  @default(false)
  companyName     String
  industry        String?
  companyDescription String? @db.Text
  companySize     String?  // startup, small, medium, large, enterprise
  websiteUrl      String?

  // Brand Voice
  brandVoice       String?  @db.Text // Description of writing tone/style
  brandGuidelines  String?  @db.Text // Full brand guide text
  sampleContent    String?  @db.Text // Past posts/articles for voice cloning
  brandColors      Json?    // Array of hex color strings
  emojiPreference  String?  // none, minimal, moderate, heavy
  controversyLevel String?  // safe, mild_opinion, clear_position, spicy

  // Audience
  primaryAudience      String?  @db.Text
  secondaryAudiences   String?  @db.Text
  audiencePainPoints   String?  @db.Text
  audienceAspirations  String?  @db.Text

  // Goals & Messaging
  primaryGoals        String?  @db.Text
  keyMessages         String?  @db.Text
  uniqueSellingPoints String?  @db.Text

  // Content Rules
  mustIncludeKeywords String?  @db.Text
  mustAvoidKeywords   String?  @db.Text
  competitorUrls      String?  @db.Text

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects Project[]

  @@index([userId])
  @@map("company_profiles")
}

model Project {
  id        String   @id @default(cuid())
  userId    String

  // Project info
  name      String
  status    String   @default("draft") // draft, generating, completed, failed
  serviceType String // blog-basic, blog-premium, social-pack, email-sequence, etc.
  tier      String   @default("premium") // budget, standard, premium
  lengthTier String  @default("standard") // quick, standard, long-form, deep-dive, ultimate

  // Form data (stored as JSON)
  formData        Json?   // topic, company, audience, goals, sampleArticles
  styleSelections Json?   // all the style options selected
  additionalInfo  String? @db.Text

  // Generated content
  result        String? @db.Text // The actual generated content
  qualityReport String? @db.Text // The quality assurance report
  structuredData Json?   // Structured pipeline output (ContentArchitectResponse JSON)

  // Metadata
  wordCount   Int?
  costCents   Int?      // Cost in cents (e.g., 9900 = $99.00)

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?

  // Company profile used for this project
  companyProfileId String?

  // Relations
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyProfile CompanyProfile? @relation(fields: [companyProfileId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("projects")
}

model Payment {
  id        String   @id @default(cuid())
  userId    String

  // Stripe info
  stripePaymentId   String?  @unique
  stripeInvoiceId   String?

  // Payment details
  amountCents       Int      // Amount in cents
  currency          String   @default("usd")
  status            String   // succeeded, pending, failed
  description       String?

  // What was purchased
  projectId         String?  // If payment was for a specific project
  subscriptionTier  String?  // If payment was for a subscription

  // Timestamps
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("payments")
}
